<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IgnatDariaLab7.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">

            <Image Source="christmas.jpg" 
       SemanticProperties.Description="Shopping List for Christmas Gifts" 
       HeightRequest="64" />

            <Label FontSize="22" FontAttributes="Bold" Text="Christmas Shopping List" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
      
        <Label Text="This app will help you manage your shopping list for Christmas gifts!" />
    </VerticalStackLayout>
</ContentPage>
